<%#
name: Ansible Roles - Install and Configure OpenScap
snippet: false
template_inputs:
- name: rolename
  required: false
  input_type: user
  advanced: false
- name: policy_name
  required: true
  input_type: user
  advanced: false
- name: crontab_hour
  required: true
  input_type: user
  advanced: false
- name: crontab_minute
  required: true
  input_type: user
  advanced: false
- name: crontab_weekdays
  required: true
  input_type: user
  advanced: false
model: JobTemplate
job_category: Miscellaneous
provider_type: Ansible
kind: job_template
%>

- hosts: localhost
  remote_user: ec2-user
  tasks:
    - name: Display all parameters known for the Foreman host
      debug:
        msg: Show the variable <%= input('rolename') %> 
  roles:
    - role: <%= input('rolename') %> 
      policy_name: <%= input('policy_name') %> 
      crontab_hour: <%= input('crontab_hour') %> 
      crontab_minute: <%= input('crontab_minute') %> 
      crontab_weekdays: <%= input('crontab_weekdays') %> 
  
